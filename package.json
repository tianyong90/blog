    "@typescript-eslint/parser": "^3.1.0",
    "@vue/test-utils": "^1.0.0-beta.31",
    "anchor": "^1.4.0",
    "autoprefixer": "^9.7.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.0.1",
    "color": "^3.1.2",
